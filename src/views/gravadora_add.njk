{% extends "base.njk" %}

{% block header %}
    <link rel="stylesheet" href="/styles/gravadora.css">
    <link rel="stylesheet" href="/styles/gravadora_add.css">
    <title>SoundSpace</title>
{% endblock  %}

{% block content %}
