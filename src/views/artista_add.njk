{% extends "base.njk" %}

{% block header %}
    <link rel="stylesheet" href="/styles/artista.css">
    <link rel="stylesheet" href="/styles/artista_add.css">
    <title>SoundSpace</title>
{% endblock  %}

{% block content %}
    {% include "partials/artista_left_nav.njk" %}

    <main>
        <h1>Adicionar</h1>
        <form action="/artist/album" method="post" id="album-form" enctype="multipart/form-data">
            <input name="name" type="text" value="" placeholder="Nome do álbum" required>
            <input name="year" type="text" placeholder="Ano de lançamento" required>
            <input name="cover" type="file" value="" alt="">
            <input id="submit-form-button" type="submit" value="Criar Álbum">
        </form>
    </main>

{% endblock  %}