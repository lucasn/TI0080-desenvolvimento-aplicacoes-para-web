{% extends "base.njk" %}

{% block header %}
    <link rel="stylesheet" href="/styles/gravadora.css">
    <link rel="stylesheet" href="/styles/gravadora_stats.css">
    <title>SoundSpace</title>
{% endblock %}

{% block content %}
    {% include "partials/gravadora_left_nav.njk" %}

    <main>
        <h1>Estatísticas</h1>
        <div class="main-column">
            <h3>Gêneros em Destaque</h3>
            <div class="card">
                <div class="genre-card">
                    <h3>1. Pop</h3>
                </div>
            </div>

            <div class="card">
                <div class="genre-card">
                    <h3>2. Pop Rock</h3>
                </div>
            </div>

            <div class="card">
                <div class="genre-card">
                    <h3>3. Indie</h3>
                </div>
            </div>

        </div>

        <div class="main-column">
            <h3>Artista em Destaque</h3>
            <div class="card">
                <div class="artist-card">
                    <img src="/images/paramore.jpeg" alt="">
                    <div>
                        <h3>1. Paramore</h3>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="artist-card">
                    <img src="/images/bruno-mars.jpeg" alt="">
                    <div>
                        <h3>2. Bruno Mars</h3>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="artist-card">
                    <img src="/images/ed-sheeran.jpg" alt="">
                    <div>
                        <h3>3. Ed Sheeran</h3>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}