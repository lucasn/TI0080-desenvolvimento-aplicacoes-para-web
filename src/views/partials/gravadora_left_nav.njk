<div id="left-nav">
    <div id="record">
        <img src="data:image/png;base64,{{recordCompany.recordCompanyPicture}}" alt="Logo gravadora">
        <h1>{{recordCompany.name}}</h1>
    </div>
    
    <div id="cards">
        <a class="card-item {% if statsPage %} card-item-selected {% endif %}" href="/record">
            <img src="/images/estatisticas.png" alt="">
            <p>Estatísticas</p>
        </a>
        <a class="card-item {% if addPage %} card-item-selected {% endif %}" href="/record/add">
            <img src="/images/botao-adicionar.png" alt="">
            <p>Adicionar Artista</p>
        </a>
        <a class="card-item {% if artistsPage %} card-item-selected {% endif %}" href="/record/artists">
            <img src="/images/artists.png" alt="">
            <p>Artistas</p>
        </a>
    </div>
    <div id="options">
        <div class="options-item">
            <button class="acessibility-button" onClick="changeFontSize('-')">A-</button>
            <button class="acessibility-button" onClick="changeFontSize('+')">A+</button>
        </div>
        <div class="options-item">
            <button id="high-contrast-button" class="high-contrast" onClick="changeHighContrastColors(event)">Ativar Alto Contraste</button>
        </div>
        <div class="options-item" onClick="retrieveConfigPage()">
            <img src="/images/settings.png" alt="">
            <p>Configurações</p>
        </div>
        <div class="options-item" onClick="logout()">
            <img src="/images/user.png" alt="">
            <p>Sair</p>
        </div>
    </div>
</div>

<script>
    function logout(){
        document.cookie = "token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
        window.location.replace("http://localhost:8080/record");
    }
</script>