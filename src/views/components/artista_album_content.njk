<div id="title-wrapper">
    <h1>{{ album.name }}</h1>
    <h2>{{ album.year }}</h2>
</div>

{% for song in album.songs %}
    <div class="music-card">
        <div class="music-card-song">
            <img src="data:image/png;base64,{{album.cover}}" alt="">
            <div>
                <h5>{{ song.title }}</h5>
                <h6>{{ song.album.artist.name }}</h6>
            </div>
        </div>
    </div>
{% endfor %}

<div id="music-add-card" class="music-card" onclick="handleAddSongButtonClick({{artistId}},{{album.id}})">
    <div class="music-card-song">
        <img src="/images/add.png" alt="">
        <div>
            <h5>Adicionar m√∫sica</h5>
        </div>
    </div>
</div>